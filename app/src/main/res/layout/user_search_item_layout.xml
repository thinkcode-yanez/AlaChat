<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_item"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_profile"></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/username_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@id/profile_image_item"
        android:text="username"
        android:textSize="19sp">

    </TextView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_online"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_below="@id/username_item"
        android:layout_marginStart="-18dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@id/profile_image_item"
        android:src="@drawable/ic_profile"
        android:visibility="gone"
        app:civ_border_color="#05df29"
        app:civ_border_width="12dp">

    </de.hdodenhof.circleimageview.CircleImageView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_offine"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_below="@id/username_item"
        android:layout_marginStart="-18dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@id/profile_image_item"
        android:src="@drawable/ic_profile"
        android:visibility="gone"
        app:civ_border_color="#bfbfbf"
        app:civ_border_width="12dp">

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/message_last"
        android:layout_below="@id/username_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        android:padding="6dp"
        android:maxLines="1"
        android:layout_toEndOf="@id/profile_image_item"
        android:textSize="19sp"
        android:textColor="@color/black">

    </TextView>

</RelativeLayout>